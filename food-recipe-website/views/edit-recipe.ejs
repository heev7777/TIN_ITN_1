<%- include('header') %>
<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">

    <label for="title">Name</label>
    <input type="text" id="title" name="name" value="<%= recipe.name %>" required />

    <label for="ingredients">Ingredients</label>
    <br>
    <textarea id="ingredients" name="ingredients" required><%= recipe.ingredients.join('\n') %></textarea>
    </br>

    <label for="instructions">Instructions</label>
    <br>
    <textarea id="instructions" name="instructions" required><%= recipe.instructions.join('\n') %></textarea>
    </br>

    <button type="submit">Update</button>
</form>
<%- include('footer') %>
